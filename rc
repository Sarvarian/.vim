""""""""""""""""""""""""""""""""""""""""
""""" Setup

set nocompatible
set title
set background=dark
set scrolloff=4
" set mouse=a
set syntax=on
" set backspace=indent,eol,start
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set autoindent
set smartindent
set number
set relativenumber
set showcmd
set wildmenu
set linebreak
set modeline
set incsearch
set hlsearch
set ignorecase
set virtualedit=all
" colorscheme elflord


""""""""""""""""""""""""""""""""""""""""
""""" Directories

set backupdir=~/.vim/backup//
set directory=~/.vim/swap//
set undodir=~/.vim/undo//


""""""""""""""""""""""""""""""""""""""""
""""" Nop

