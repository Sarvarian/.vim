
set background=dark
set scrolloff=4
set tabstop=4
set number
set relativenumber
set autoindent
set smartindent
set showcmd
set wildmenu
set linebreak
set modeline
set mouse=a

set backupdir=~/.vim/backup//
set directory=~/.vim/swap//
set undodir=~/.vim/undo//

map q <Nop>
map Q <Nop>
map n <Nop>
map N <Nop>
map e <Nop>
map E <Nop>
map o <Nop>
map O <Nop>
map u <Nop>
map U <Nop>

" Left, right, down, up.
noremap n h
noremap o l
noremap e j
noremap u k
inoremap <C-n> <Left>
inoremap <C-o> <Right>
inoremap <C-e> <Down>
inoremap <C-u> <Up>
" Scroll up and down.
noremap U <C-E>
noremap E <C-Y>
noremap <ScrollWheelUp> <C-E>
noremap <ScrollWheelDown> <C-Y>
" Move cursor half page up and down.
noremap <C-U>  <C-U>zz
noremap <C-E>  <C-D>zz
" Move to begin and end of line.
noremap N ^
noremap O $
inoremap <C-f> <Home>
inoremap <C-p> <End>
noremap <C-f> <Home>
noremap <C-p> <End>

" Previous word, next word.
noremap R b
noremap r B
noremap W w
noremap w W
" End of next word, previous word.
noremap t E
noremap T e
noremap h gE
noremap H ge
" Begin and end of page.
noremap gg gg
noremap G G

" Move screen to center cursor.
noremap l zz
inoremap <C-L> <Esc>zza
" Move cursor to center of screen.
noremap L M

" Undo and redo.
noremap z u
noremap Z <C-r>
" New line after and before current line.
noremap ' o
noremap " O

" Go to insert mode.
noremap a a
noremap A A
noremap i i
noremap I I
" Go to normal mode. Use shift-tab to type tab in insert mode.
inoremap <BS> <Esc>
vnoremap <BS> <Esc>
" Go to command mode.
nnoremap / :
nnoremap \ :

" Delete, yank, put.
noremap s x
noremap S X
noremap d d
noremap D Da
noremap y y
noremap Y Y
noremap p p
noremap P P
imap <C-'> <BS>

" Substitude 
noremap x s
noremap X S

" Auto completion.
inoremap <C-K> <C-N>

" Quit, Save.
noremap <C-Q> <Esc>:q!<CR>
noremap <C-S> <Esc>:w<CR>
inoremap <C-S> <Esc>:w<CR>
inoremap <C-Q> <Esc>:q!<CR>

" Insert mode commands.
inoremap \w <Esc>:w<CR>a
inoremap \\ \

" vim: set ft=vim:
