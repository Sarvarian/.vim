
set background=dark
set scrolloff=4
set tabstop=4
set number
set relativenumber
set autoindent
set smartindent
set showcmd
set wildmenu
set linebreak
set modeline

set backupdir=~/.vim/backup//
set directory=~/.vim/swap//
set undodir=~/.vim/undo//

map q <Nop>
map Q <Nop>
map n <Nop>
map N <Nop>
map e <Nop>
map E <Nop>
map o <Nop>
map O <Nop>
map u <Nop>
map U <Nop>

" Left, right, down, up.
noremap n h
noremap o l
noremap e j
noremap u k
" Scroll up and down.
noremap U <C-E>
noremap E <C-Y>
" Move cursor half page up and down.
noremap <C-U>  <C-U>zz
noremap <C-E>  <C-D>zz

" Previous word, next word.
noremap R b
noremap r B
noremap W w
noremap w W
" End of next word.
noremap t E
" Begin and end of line.
noremap H ^
noremap T $
" Begin and end of page.
noremap gg gg
noremap G G

" Move screen to center cursor.
noremap l zz
" Move cursor to center of screen.
noremap L M

" Undo adn redo.
noremap z u
noremap Z <C-r>
" New line after and before current line.
noremap ' o
noremap " O

" Go to insert mode.
noremap a a
noremap A A
noremap i i
noremap I I
" Go to normal mode. Use shift-tab to type tab in insert mode.
inoremap <BS> <Esc>
vnoremap <BS> <Esc>
" Go to command mode.
nnoremap / :

" Delete, yank, put.
noremap s x
noremap S X
noremap d d
noremap D D
noremap y y
noremap Y Y
noremap p p
noremap P P

" Substitude 
noremap x s
noremap X S

" Quit, Save.
noremap <C-Q> <Esc>:q!<CR>
noremap <C-S> <Esc>:w<CR>
inoremap <C-S> <Esc>:w<CR>
inoremap <C-Q> <Esc>:q!<CR>

" vim: set ft=vim:
